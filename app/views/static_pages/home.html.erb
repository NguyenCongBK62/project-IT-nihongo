<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="article_form">
        <%= render 'articles/form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Articles Feed</h3>
      <%= render 'articles/feed' %>
    </div>
  </div>
<% else %>
  <div class="jumbotron">
    <h1 class="display-4">WELCOME TO MY BLOG!</h1>
    <%= link_to image_tag("railslogo.png", alt: "Rails logo", width: "600px", height: "250px"),"https://rubyonrails.org/" %>
    <hr>
    <%= link_to "Sign up now !", new_user_registration_path, {:role=>'button', :class => "btn btn-primary btn-lg"} %>
  </div>
<% end %>