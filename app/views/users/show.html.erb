<div class="row" style="margin-top: 50px; ">
    <aside class="col-md-4">
        <section class="user_info", style="margin-left: 30px;">
            <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar , class: "gravatar", style:'width: 50px; height: 50px;border-radius:50%;-moz-border-radius:50%;-webkit-border-radius:50%;'%>
            <% end %>
            <h1><%= @user.name %></h1>
            <table class="table">
               <tr>
                   <th>Followings</th>
                   <th>Followers</th>
                </tr>
                <tr>
                   <td> <%= @user.total_follower %></td>
                   <td> <%= @user.total_following %></td>
                </tr>
            </table>
        </section>
    </aside>
    <div class="col-md-8">
        <% if @user.articles.any? %>
            <h3>articles (<%= @user.articles.count %>)</h3>
                <ol class="articles">
                <%= render @articles %>
            </ol>
        <% end %>
    </div>
</div>