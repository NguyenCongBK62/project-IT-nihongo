<% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar , class: "gravatar", style:'width: 50px; height: 50px;border-radius:50%;-moz-border-radius:50%;-webkit-border-radius:50%;'%>
<% end %>
<h1><%= current_user.name %></h1>
<span><%= link_to "view my profile", user_path(current_user) %></span>