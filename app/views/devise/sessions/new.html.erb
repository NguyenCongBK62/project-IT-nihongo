<div class="login d-flex align-items-center py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-4 mx-auto">
        <h3 class="login-heading mb-4">Welcome back!</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-label-group">
              <%= f.label :email, :for => "inputEmail" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :id => "inputEmail", :class => "form-control", :placeholder => "Email address" %>
            </div>
          
            <div class="form-label-group">
              <%= f.label :password, :for => "inputPassword" %><br />
              <%= f.password_field :password, autocomplete: "current-password", :id => "inputPassword", :class => "form-control" %>
            </div>
              
            <% if devise_mapping.rememberable? %>
              <div class="custom-control custom-checkbox mb-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
              <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" %>
            <% end %>
            <div class="text-center">
            <%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>
